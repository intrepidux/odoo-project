<odoo>
    <data>
        <template id="project_estimate_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <span>Estimate Report</span>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_report_project_estimate" model="ir.actions.report">
            <field name="name">Project Estimate</field>
            <field name="model">project.estimate</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">project_estimate.project_estimate_report</field>
            <field name="report_file">project_estimate.project_estimate_report</field>
            <field name="binding_model_id" ref="model_project_estimate"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>