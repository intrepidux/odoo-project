<odoo>
    <data>
        <record id="project_estimate_form_view" model="ir.ui.view">
            <field name="name">project.estimate.form</field>
            <field name="model">project.estimate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_sale_order" type="object" class="btn btn-primary" string="Create Sale Order"/>
                        <button name="action_receive_shipment" type="object" class="btn btn-primary" string="Receive Shipment"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="preview_sale_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Customer</span>
                                    <span class="o_stat_text">Preview</span>
                                </div>
                            </button>
                            <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Invoices</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_project" class="oe_stat_button" icon="fa-puzzle-piece">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Project</span>
                                </div>
                            </button>
                            <button type="object" name="action_sale_order" class="oe_stat_button" icon="fa-dollar">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sale Order</span>
                                </div>
                            </button>
                            <button type="object" name="action_receive_shipment" class="oe_stat_button" icon="fa-truck">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Shipment</span>
                                </div>
                            </button>
                            <button type="object" name="action_unbuild_order" class="oe_stat_button" icon="fa-gear">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Unbuild</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="estimated_income" widget="monetary"/>

                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="estimated_expenses" widget="monetary"/>
                                <field name="estimated_revenue_percentage"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Estimate Items">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="unbuild_template_id"/>
                                        <field name="description"/>
                                        <field name="qty"/>
                                        <field name="price"/>
                                        <field name="sub_total" sum="Total" widget="monetary"/>
                                        <button name="action_show_details" type="object" icon="fa-refresh" width="0.1" options="{&quot;warn&quot;: true}"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Unbuild Product Items">
                                <field name="unbuild_line_ids">
                                    <tree editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="unbuild_template_id"/>
                                        <field name="qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="price" required="1"/>
                                        <field name="sub_total" sum="Total" widget="monetary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_estimate_tree_view" model="ir.ui.view">
            <field name="name">project.estimate.tree</field>
            <field name="model">project.estimate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

